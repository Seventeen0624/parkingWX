/* pages/location/location.wxss */
.container{
  display: flex;
  flex-direction: column;
}

.search{
  background-color: #f2f2f2;
  height: 40px;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.search input{
  height: 100%;
  width: 600rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.search-img{
  margin: auto 0 auto 20rpx;
}

.placeholder{
  font-size: 28rpx;
  color: #d1d1d1;
  margin-left: 20px;
}

.search-pannel{
  position: absolute;
  top: 80rpx;
}

.xx-image{
  height: 30rpx;
  width: 30rpx;
  margin: auto 0 auto 10rpx;
}

.moveToLocation{
  position: absolute;
  left: 25px;
  bottom: 25px;
  width: 30px;
  height: 30px;
}

.private{
  position: absolute;
  right: 25px;
  bottom: 20px;
  width: 40px;
  height: 40px;
}

.scanCode{
  background-color: #201c1c;
  width: 100%;
  height: 40px;
  color: #e9dcdc;
  text-align: center;
  font-weight: bold;
  letter-spacing: 2px;
  line-height: 40px;
}

.map-search-list{
  position: fixed;
  top: 80rpx;
  left: 0;
  width: 100%;
  z-index: 1000;
  background-color: #fff;
}

.map-box{
  margin: 0 10px;
  border-bottom:1px solid #c3c3c3;
  height: 80rpx;
  line-height: 80rpx;
}
.map-box:last-child{border: none;}